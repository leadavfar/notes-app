<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card bg-dark text-white">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{!-- {{title}} <a href="/notes/edit/{{_id}}"><i class="fa-solid fa-pen-to-square"></i></a> --}}
                    {{title}}
                </h4>
                <p>{{description}}</p>
                <a class="text-white" href="/notes/edit/{{_id}}"><button class="btn btn-primary btn-block btn-sm ">
                        Edit</button></a>
                </p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger btn-block btn-sm">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>