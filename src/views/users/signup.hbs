<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-4 text-center bg-dark text-white">
      <div class="card-header">
        <h1 class="h4">
          Account Register
        </h1>
      </div>
      <img src="/img/user.png" class="mx-auto d-block logo m-2" width="60px" alt="User">
      <div class="card-body">
        <form action="/users/signup" method="POST">
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password"
              value="{{confirm_password}}">
          </div>
          <button class="btn btn-primary btn-block">
            Signup
          </button>
        </form>
      </div>
    </div>
  </div>
</div>